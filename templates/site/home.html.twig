{% extends 'base.html.twig' %}

{% block title %}Welcome to Playbox Theater{% endblock %}

{% block body %}

{# Hero Banner #}
<section class="bg-dark text-white text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">Welcome to Playbox Theater</h1>
        <p class="lead mb-4">
            Bold new works. Local voices. A space for creative risk.
        </p>
        <a href="{{ path('app_shows') }}" class="btn btn-primary btn-lg">See What’s On</a>
    </div>
</section>

{# Our Season Section #}
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center gy-4">
            <div class="col-md-6">
                <h2 class="fw-bold">The 2025 Season</h2>
                <p class="text-muted">
                    This year we’re presenting a mini-festival of short plays in the spring, and a full-length mainstage production in the fall. Two events. One mission: amplify original work from Pittsburgh’s most daring voices.
                </p>
                <a href="{{ path('app_shows') }}" class="btn btn-outline-dark mt-3">Explore the Season</a>
            </div>
            <div class="col-md-6">
                <img src="/images/season-collage.jpg" alt="Collage of rehearsal photos and stage lights" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

{# Classes Section #}
<section class="py-5">
    <div class="container">
        <div class="row align-items-center gy-4 flex-md-row-reverse">
            <div class="col-md-6">
                <h2 class="fw-bold">The Playbox Studio</h2>
                <p class="text-muted">
                    Our classes focus on technique, collaboration, and bold experimentation. Whether you're new to theater or returning to the stage, there's a workshop for you.
                </p>
                <a href="{{ path('app_classes') }}" class="btn btn-outline-primary mt-3">Browse Classes</a>
            </div>
            <div class="col-md-6">
                <img src="/images/classes-teaser.jpg" alt="An acting class mid-exercise in a rehearsal room" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

{# Newsletter Section (reused) #}
<section class="py-5 bg-dark text-white">
    <div class="container text-center">
        <h3 class="fw-bold mb-3">Stay in the Loop</h3>
        <p class="mb-4">Want early access to tickets and casting calls? Join our mailing list:</p>
        <form class="row justify-content-center" method="post" action="#">
            <div class="col-md-6 col-lg-4">
                <div class="input-group">
                    <input type="email" name="email" class="form-control" placeholder="you@example.com" required>
                    <button class="btn btn-primary" type="submit">Subscribe</button>
                </div>
            </div>
        </form>
    </div>
</section>

{% endblock %}
